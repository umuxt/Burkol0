{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "camelcase": ["error", {
      "properties": "always",
      "ignoreDestructuring": false,
      "ignoreImports": false,
      "ignoreGlobals": true,
      "allow": [
        "^UNSAFE_",
        "^UNSTABLE_"
      ]
    }],
    "no-unused-vars": ["warn", {
      "argsIgnorePattern": "^_",
      "varsIgnorePattern": "^_"
    }],
    "no-console": "off",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }]
  },
  "overrides": [
    {
      "files": [
        "db/migrations/**/*.js",
        "shared/i18n.js",
        "server/mesRoutes.js"
      ],
      "rules": {
        "camelcase": "off"
      }
    },
    {
      "files": ["*.test.js", "*.spec.js"],
      "env": {
        "mocha": true
      }
    }
  ]
}
