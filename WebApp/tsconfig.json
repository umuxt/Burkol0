{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "baseUrl": "."
  },
  "include": [
    "domains/**/*.tsx",
    "src/**/*.jsx",
    "shared/**/*.tsx",
    "shared/**/*.ts"
  ]
}

