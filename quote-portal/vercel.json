{
  "buildCommand": "VITE_API_BASE_URL=/api npm run build",
  "outputDirectory": "dist",
  "env": {
    "VITE_API_BASE_URL": "/api"
  },
  "build": {
    "env": {
      "VITE_API_BASE_URL": "/api"
    }
  },
  "rewrites": [
    { 
      "source": "/api/:path*", 
      "destination": "https://api.test-burkolmetal.com/api/:path*" 
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "unsafe-none"
        }
      ]
    }
  ]
}

