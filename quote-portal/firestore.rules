rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Development rules - Allow all read/write operations
    // WARNING: These rules are for development only!
    // Do not use in production without proper security
    
    match /{document=**} {
      allow read, write: if true;
    }
    
    // Specific rules for collections
    match /materials/{materialId} {
      allow read, write: if true;
    }
    
    match /categories/{categoryId} {
      allow read, write: if true;
    }
    
    match /suppliers/{supplierId} {
      allow read, write: if true;
    }
    
    match /orders/{orderId} {
      allow read, write: if true;
    }
    
    // orderItems and stockMovements collections removed
    // Items are embedded in orders, stock managed by backend API
    }
  }
}