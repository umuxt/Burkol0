{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["id", "planId", "nodeId", "workerId", "stationId", "status", "nominalTime"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^WO-"
    },
    "planId": {
      "type": "string"
    },
    "nodeId": {
      "type": "string"
    },
    "workerId": {
      "type": "string"
    },
    "stationId": {
      "type": "string"
    },
    "substationId": {
      "type": ["string", "null"],
      "description": "Assigned substation ID (optional)"
    },
    "priority": {
      "type": "integer",
      "minimum": 1,
      "maximum": 3,
      "default": 2,
      "description": "Priority for optimization (1=Low, 2=Normal, 3=High)"
    },
    "optimizedIndex": {
      "type": ["integer", "null"],
      "minimum": 1,
      "description": "Optimized execution order (null for FIFO mode)"
    },
    "isUrgent": {
      "type": "boolean",
      "default": false,
      "description": "Urgent flag for UI indication"
    },
    "schedulingMode": {
      "type": "string",
      "enum": ["fifo", "optimized"],
      "default": "fifo",
      "description": "Scheduling algorithm used (fifo or optimized)"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "in_progress", "paused", "completed", "cancelled"]
    },
    "nominalTime": {
      "type": "integer",
      "minimum": 1
    },
    "effectiveTime": {
      "type": "integer",
      "minimum": 1
    },
    "expectedStart": {
      "type": "string",
      "format": "date-time",
      "description": "Expected start time (FIFO mode)"
    },
    "optimizedStart": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "Optimized start time (optimized mode, null for FIFO)"
    },
    "plannedEnd": {
      "type": "string",
      "format": "date-time"
    },
    "actualStart": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "actualEnd": {
      "type": ["string", "null"],
      "format": "date-time"
    },
    "preProductionReservedAmount": {
      "type": "object",
      "patternProperties": {
        "^M-": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "actualReservedAmounts": {
      "type": "object",
      "patternProperties": {
        "^M-": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "materialReservationStatus": {
      "type": "string",
      "enum": ["pending", "reserved", "consumed"]
    },
    "totalPausedTime": {
      "type": "integer",
      "minimum": 0
    },
    "currentPauseStart": {
      "type": ["string", "null"],
      "format": "date-time"
    }
  }
}
