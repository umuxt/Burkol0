{
  "name": "burkol-quote-portal",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "npm run start:backend",
    "start:backend": "PORT=3000 NODE_ENV=development node server.js",
    "start:frontend": "PORT=3001 npm run dev",
    "start:both": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "dev": "vite --port 3001",
    "build": "vite build",
    "build:backend": "echo 'Backend build: Installing dependencies...' && npm install",
    "preview": "vite preview",
    "test:quotes": "node scripts/test-quotes-system.js",
    "pm2:start": "pm2 start config/ecosystem.config.js",
    "pm2:restart": "pm2 restart burkol-backend || pm2 start config/ecosystem.config.js",
    "pm2:logs": "pm2 logs burkol-backend"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "axios": "^1.13.2",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "express": "^4.19.2",
    "formulajs": "^1.0.8",
    "glob": "^13.0.0",
    "hot-formula-parser": "^4.0.0",
    "joi": "^18.0.1",
    "knex": "^3.1.0",
    "lucide-react": "^0.548.0",
    "mime-types": "^2.1.35",
    "path-to-regexp": "^8.3.0",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sonner": "^1.5.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/react": "^19.0.4",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^5.0.3",
    "concurrently": "^9.2.1",
    "playwright": "^1.55.0",
    "puppeteer": "^24.25.0",
    "vite": "^7.1.7"
  }
}
